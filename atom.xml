    <link href="http://example.com/2024/09/11/%E7%B6%B2%E8%B7%AF%E6%A6%82%E8%AB%96/"/>
    <id>http://example.com/2024/09/11/%E7%B6%B2%E8%B7%AF%E6%A6%82%E8%AB%96/</id>
